{% extends 'base.html.twig' %}

{% block body %}

<div class='container'>
	<div class='row'>
		<div class='col-xs-12'>
			<h1>The Genus List:</h1>
			<table class='table table-bordered'>
				<thead>
					<tr>
						<th>id</th>
						<th>name</th>
					</tr>
				</thead>
				<tbody>
					{% for genus in genusList %}
					<tr>
						<td>{{ genus.id }}</td>
						<td>{{ genus.name }}</td>
					</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>
</div>

{% endblock %}